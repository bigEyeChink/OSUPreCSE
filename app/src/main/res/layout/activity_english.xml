<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/english_promote_text"
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/pre_englishMath_promote_question"
        android:textAlignment="center"
        android:textSize="18sp"
        />

    <ListView
        android:id="@+id/englishMath_checkbox_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/english_promote_text"
        android:layout_above="@id/english_confirm_button"
        />
    <Button
        android:id="@+id/english_confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/splash_logo"
        android:gravity="center_horizontal"
        android:text="@string/button_text_next"
        android:textColor="#f5f0f0" />

</RelativeLayout>