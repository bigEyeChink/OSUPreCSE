<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button

            android:id="@+id/preMajor"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/preMajorBack"
            android:text="@string/main_pre_button_text"/>
        <Button
            android:id="@+id/major"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/majorBack"
            android:text="@string/main_button_major_text"
            android:textColor="@color/main_major_button_text"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>